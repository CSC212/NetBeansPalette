<PaletteItem>
    <Category>Arrays</Category>
    <DisplayName>String Array</DisplayName>
    <Tooltip>A string array is an array consisting of strings,\n which can consist of words, numbers, or symbols of any length.\nIf providing data, separate it with a space, and wrap your string in quotes (" ").</Tooltip>
    <Example>String[] varName = { "abc", "abc123", "Hello my name is Tony!" }</Example>
    <Icon>org/qcc/modules/learningpalette/Arrays/array16.png</Icon>
    <Languages>
        <Language id="JAVA">
            <codeTemplate1>String[] $varName;</codeTemplate1>
            <codeTemplate2>String[] $varName = new String[$size];</codeTemplate2>
            <codeTemplate3>String[] $varName = {$initializeValue};</codeTemplate3>
        </Language>
        <Language id="CPP">
            <codeTemplate1>string $varName[$size];</codeTemplate1>
            <codeTemplate2>string $varName[$size];</codeTemplate2>
            <codeTemplate3>string $varName[] = {$initializeValue};</codeTemplate3>
        </Language>
    </Languages>
    <!-- Customizer dynamic creation at runtime, currently supported controls:
        Text, Combo
    -->
    <Customizer>
        <Item type="Text" name="VariableName" label="Array Name:" value="" />
        <Item type="Text" name="ArraySize" label="Array Size:" value="" />
        <Item type="Text" name="InitializeValue" label="Array Initialized Value:" value="" />
        <Item type="Text" name="Comment" label="Comment:" value="" />
    </Customizer>
    <PaletteLogicClass>org.qcc.modules.learningpalette.Arrays.LP_StringArray</PaletteLogicClass>
</PaletteItem>